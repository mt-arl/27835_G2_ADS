{
  "name": "kairosmix-pruebas-e2e",
  "version": "1.0.0",
  "description": "Pruebas E2E automatizadas con Playwright para KairosMix V3",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:chrome": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:webkit": "npx playwright test --project=webkit",
    "report": "npx playwright show-report",
    "codegen": "npx playwright codegen http://localhost:5173"
  },
  "keywords": ["e2e", "playwright", "testing", "kairosmix"],
  "author": "Equipo QA KairosMix",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.50.0"
  }
}
